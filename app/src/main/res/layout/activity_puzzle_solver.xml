<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.spybug.sudokusolver.PuzzleSolver">

    <Button
        android:text="@string/full_solve_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fully_solve_button"
        android:layout_marginBottom="108dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/single_solve_label"
        android:id="@+id/single_solve_button"
        android:layout_alignTop="@id/fully_solve_button"
        android:layout_toRightOf="@id/fully_solve_button"
        android:layout_toEndOf="@id/fully_solve_button"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear_puzzle_label"
        android:id="@+id/clear_puzzle_button"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/fully_solve_button"
        android:layout_alignStart="@+id/fully_solve_button"
        android:layout_marginBottom="26dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save_puzzle_label"
        android:id="@+id/save_puzzle_button"
        android:layout_alignTop="@id/clear_puzzle_button"
        android:layout_alignRight="@id/single_solve_button"
        android:layout_alignEnd="@id/single_solve_button"/>
</RelativeLayout>
